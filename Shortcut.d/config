-- Модулът съдържа конфигурационни данни за [[Модул:Shortcut]].

return {

-- Заглавието в горната част на карето. Приема следния параметър:
-- $1 - общия брой на съкращенията. (задължителен)
['shortcut-heading'] = '[[Уикипедия:Съкращения|{{PLURAL:$1|Съкращение|Съкращения}}]]:',

-- Съобщението за грешка което ще върне при невалидно съкращение (не е низ или
-- е празен низ). Приема следния параметър:
-- $1 - броят съкращения в списъка с аргументи. (задължителен)
['invalid-shortcut-error'] = 'shortcut #$1 was invalid (shortcuts must be ' ..
	'strings of at least one character in length)',

-- Съобщението за грешка което ще върне при липса на съкращение или някакъво
-- друго съдържание за показване зададено от нас. (задължителен)
['no-content-error'] = 'Error: no shortcuts were specified and the ' ..
	mw.text.nowiki('|msg=') ..
	' parameter was not set.',

-- Категорията която ще бъде добавена при съобщение за грешка no-content-error.
-- (незадължителен)
['no-content-error-category'] = 'Shortcut templates with missing parameters',

-- Категорията която ще бъде добавена в случай, че съкращението описано в
-- първия параметър не съществува. (незадължителен)
['first-parameter-error-category'] = 'Wikipedia shortcut box first parameter needs fixing',

}